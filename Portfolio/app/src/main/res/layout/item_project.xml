<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="12dp"

    app:cardCornerRadius="6dp"


    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_project_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/quote" />

        <TextView
            android:id="@+id/text_view_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_view_project_icon"
            android:layout_toEndOf="@+id/image_view_project_icon"
            android:fontFamily="sans-serif-black"
            android:textColor="#635F5F"
            android:textSize="18sp"
            tools:text="App titlr" />

        <TextView
            android:id="@+id/text_view_app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_app_title"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/image_view_project_icon"
            android:fontFamily="sans-serif-black"
            android:textColor="#888888"
            tools:text="This is my project description" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>