<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">


        <TextView
            android:id="@+id/text_view_restaurant_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="24sp"

            android:fontFamily="sans-serif-light"

            android:text="THe Hungry developer"

            android:textColor="@color/colorPrimaryDark"

            android:textSize="24sp"

            />


        <TextView
            android:id="@+id/text_view_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_restaurant_name"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:fontFamily="sans-serif-black"
            android:text="amitsingh506142@gmail.com" />


        <androidx.cardview.widget.CardView

            android:id="@+id/card_view_card_view_starter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/starters"

                    />

                <TextView

                    android:id="@+id/text_view_restaurant_starter"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="18sp"

                    android:fontFamily="sans-serif-black"

                    android:text="Stareter" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:id="@+id/card_view_main_courses"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_card_view_starter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/resturant"

                    />

                <TextView

                    android:id="@+id/text_view_mainCourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_view_card_view_starter"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="18sp"
                    android:layout_marginTop="18sp"
                    android:fontFamily="sans-serif-black"
                    android:text="Main Courses" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>